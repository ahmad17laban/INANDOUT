@model IEnumerable<InAndOut.Models.Itemm>


    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> borrowed items</h2>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-primary" asp-controller="Itemm" asp-action="Create">create content</a> 
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped " style="width:100%">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Borrower
                </th>
                <th>
                    Lender
                </th>
                <th> changes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var itemm in Model)
            {
            <tr>
                <td width="25%">@itemm.ItemmName</td>
                <td width="25%"> @itemm.Borrower</td>
                <td width="25%">@itemm.lender</td>
                <td width="25%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Itemm" asp-action="Update" asp-route-id="@itemm.id" class="btn btn-primary mx-1">Update</a>
                        <a asp-controller="Itemm" asp-action="Delete" asp-route-id="@itemm.id" class="btn btn-danger mx-1">Delete</a>
                    </div>
                </td>
            </tr>
        }

            </tbody>
        </table>


