@model InAndOut.Models.Itemm

<form method="post" asp-action="Update">
    @*<div asp-validation-summary="All" class="text-danger "></div>*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemmName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="lender"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemmName" class="form-control" />
                        <span asp-validation-for="ItemmName" class="btn-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Borrower" class="form-control" />
                        <span asp-validation-for="Borrower" class="btn-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="lender" class="form-control" />
                        <span asp-validation-for="lender" class="btn-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
}}